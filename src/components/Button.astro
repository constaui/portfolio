---
interface Props {
  outline?: boolean;
  href?: string;
}

const { outline = false, href } = Astro.props;
const Component = href ? "a" : "button";
---

<Component
  {...href && { href, target: "_blank", rel: "noopener noreferrer" }}
  class:list={[
    "flex gap-2 rounded-3xl cursor-pointer uppercase border",
    outline
      ? " border-neutral-50 py-2 px-3 hover:bg-neutral-50 hover:text-neutral-950 hover:outline hover:outline-neutral-50 transition-colors"
      : "border-transparent text-neutral-950 bg-neutral-50 rounded-3xl py-2 px-4   hover:bg-transparent hover:text-neutral-50  hover:border-neutral-50 transition-colors",
  ]}><slot /></Component
>
