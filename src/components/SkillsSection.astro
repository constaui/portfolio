---
import { skills } from "../data/skills";
---

<section class="flex flex-col gap-4">
  <h2 class="text-2xl">Навыки</h2>
  <div class="flex flex-wrap gap-2">
    {
      skills.map(({ title, icon: Icon, list }) => (
        <div class="flex gap-2 py-2 px-3 border border-neutral-50 rounded-3xl">
          <Icon class="stroke-1 stroke-neutral-50" />
          <p class="uppercase">
            <span class="text-neutral-400">{title}:</span>
            {list.join(" / ")}
          </p>
        </div>
      ))
    }
  </div>
</section>
